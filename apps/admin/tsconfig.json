{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@styles/*": ["../../packages/styles/src/*"],
      "@pages/*": ["../../packages/pages/*"],
      "@sgComponent/*": ["../../packages/ui/src/components/sgComponent/*"],
      "@mock/*": ["../../packages/mock/*"],
      "@presenter/*": ["../../packages/mock/presenter/*"]
    }
  },
  "include": ["src"]
}

